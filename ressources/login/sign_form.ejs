
<%- include('../layout/head') %>
<%- include('../layout/header') %>

<% if(message) {%>

<div class="w3-panel w3-pale-red w3-center">

	<h2>Erreur</h2>

	<p> Ce nom d'utilisateur est deja pris </p>

</div>

<%}%>

<div class="w3-container w3-row ">

	<div class="w3-col m2 l3" style="visibility: hidden">
		CENTER
	</div>

	<div class="w3-container w3-center w3-col s12 m8 l6">

		<h2> Inscription </h2>

		<form action="/login/signin" method="post" name="Sign" onsubmit="return validateForm()">
			
			<label name="user_name">Nom d'utilisateur</label>
			<input class="w3-input w3-border w3-round-large" type="text" name="user_name" required>

			<label name="pass">Mot de passe</label>
			<input class="w3-input w3-border w3-round-large" type="password" name="pass" required>	

			<label name="pass_confirm">Confirmer Mot de passe</label>
			<input class="w3-input w3-border w3-round-large" type="password" name="pass_confirm" required>		

			<div class="w3-panel w3-palet-red" style="display: none" id="warning">
				<p>Les mots de passe doivent correspondre</p>
			</div>

			<label name="birth_date">Date de Naissance</label>
			<input class="w3-input w3-border w3-round-large" type="date" name="birth_date" required>		

			<input type="submit" class="w3-button w3-light-green" value="Valider">

		</form>

	</div>

	<div class="w3-col m2 l3" style="visibility: hidden">
		CENTER
	</div>


</div>

<div class="w3-container w3-center">
	
	<p>Deja inscrit ? <a href="/login/signin">Log in !</a></p>

</div>

<%- include('../layout/foot',{vue: vue}) %>