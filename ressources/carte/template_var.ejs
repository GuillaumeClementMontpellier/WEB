
<%- include('../layout/head') %>
<%- include('../layout/header_logged') %>


<div class="w3-container w3-row ">

	<div class="w3-col m2 l3" style="visibility: hidden">
		LEFT
	</div>

	<div class="w3-container w3-center w3-col s12 m8 l6">

		<h2>Creer une carte </h2>

		<form action="/api/carte/var" method="post" name="carte" id="carte">
			
			<label name="image_url">URL de l'image</label>
			<input class="w3-input w3-border w3-round-large" type="text" name="image_url" required>
			
			<label name="flavor">Texte d'ambience</label>
			<input class="w3-input w3-border w3-round-large" type="text" name="flavor" >
			
			<label name="scry_url">URL de scryfall</label>
			<input class="w3-input w3-border w3-round-large" type="text" name="scry_url" required>
			
			<label name="gath_url">URL de gatherer</label>
			<input class="w3-input w3-border w3-round-large" type="text" name="gath_url" required>


			
			<label name="edition_code">Edition</label>
			<div class="w3-row">

				<input class="w3-input w3-border w3-round-large w3-col s12 m4 l3" v-model="code_edition" type="text">
				<input class="w3-input w3-border w3-round-large w3-col s12 m8 l7" v-model="nom_edition" type="text">

				<button class="w3-button w3-btn w3-border w3-block w3-col s12 m12 l2" @click.prevent="ajouter_edition()">Ajouter une edition</button>

			</div>
			<select size="3" class="w3-select w3-border w3-round-large" :required="true" name="edition_code" >		

				<option :selected="true" disabled>Choisir une edition</option>		
				<option v-for="ed in editions" :key="ed.code" :value="ed.code">{{ed.edition_name}}</option>

			</select>


			
			<label name="carte_id">Rechercher la carte type correspondante</label>

			<div class="w3-row">

				<input class="w3-input w3-border w3-round-large w3-col s12 m12 l8" v-model="nom_carte" type="text">

				<button class="w3-button w3-btn w3-border w3-block w3-col s12 m12 l4" @click.prevent="rechercher_carte()">Rechercher</button>

			</div>

			<select size="3" class="w3-input w3-border w3-round-large" :required="true" name="carte_id" >

				<option :selected="true" disabled>Choisir une carte</option>
				<option v-for="c in carte_t" :key="c.carte_id" :value="c.carte_id">{{c.carte_name}}</option>

			</select>

			<p>Vous ne trouvez pas un modele de carte ? <a href="/carte/template/type">Cr√©ez-en un !</a></p>

			<input type="submit" class="w3-button w3-light-green" value="Valider">

		</form>

	</div>

	<div class="w3-col m2 l3" style="visibility: hidden">
		RIGHT
	</div>


</div>


<%- include('../layout/foot',{vue: vue, logged: true}) %>